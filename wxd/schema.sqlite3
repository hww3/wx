CREATE TABLE stations (
  station_id int not null primary key,
  location char(100) not null,
  has_wind int(1),
  has_rain int(1),
  has_pressure int(1),
  has_lux int(1),
  has_rhx int(1)
);

CREATE TABLE observations (

updated datetime,
location char(10),
uptime int,
temperature number,
pressure number,
humidity number,
temperature_b number,
rainfall number,
windspeed number,
direction number,
wind_gusts number,
luminosity_a number,
luminosity_b number,
luminosity_c number
);
